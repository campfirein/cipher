# Cipher Environment Configuration

# Redis Caching Configuration (Optional)
# Enable Redis caching for memory recall acceleration
# Disabled by default for backward compatibility
CACHE_ENABLED=false

# Redis Connection Settings
# Required when CACHE_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache Behavior Settings
REDIS_TTL=3600                # Cache entry TTL in seconds (default: 1 hour)
REDIS_KEY_PREFIX=recall       # Prefix for all cache keys (default: recall)

# Example Configurations:

# Development (Local Redis)
# CACHE_ENABLED=true
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_TTL=3600

# Production (Kubernetes with Dragonfly)
# CACHE_ENABLED=true
# REDIS_HOST=dragonfly.dbms.svc.cluster.local
# REDIS_PORT=6379
# REDIS_PASSWORD=${SECRET_REDIS_PASSWORD}
# REDIS_DB=0
# REDIS_TTL=3600

# Production (AWS ElastiCache)
# CACHE_ENABLED=true
# REDIS_HOST=cipher-cache.abcdef.0001.use1.cache.amazonaws.com
# REDIS_PORT=6379
# REDIS_PASSWORD=${ELASTICACHE_AUTH_TOKEN}
# REDIS_DB=0
# REDIS_TTL=3600

# Production (Azure Cache for Redis)
# CACHE_ENABLED=true
# REDIS_HOST=cipher-cache.redis.cache.windows.net
# REDIS_PORT=6380
# REDIS_PASSWORD=${AZURE_REDIS_KEY}
# REDIS_DB=0
# REDIS_TTL=3600

# Production (GCP Memorystore)
# CACHE_ENABLED=true
# REDIS_HOST=10.0.0.3
# REDIS_PORT=6379
# REDIS_PASSWORD=${MEMORYSTORE_AUTH_STRING}
# REDIS_DB=0
# REDIS_TTL=3600
